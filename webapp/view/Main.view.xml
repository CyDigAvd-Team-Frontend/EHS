<mvc:View
    xmlns:core="sap.ui.core"
    controllerName="no.mil.zehs.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:tnt="sap.tnt"
    xmlns:fb="sap.ui.comp.filterbar"
>
    <Page
        id="page"
        title="Si ifra!"
    >
        <content>
            <Toolbar id="_IDGenToolbar1">
                <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                <Button
                    id="_IDGenButton1"
                    icon="sap-icon://add"
                    text="Opprett varsel"
                    press="onPressNavToForm"
                />
            </Toolbar>
            <fb:FilterBar
                id="_IDGenFilterBar1"
                reset="onReset"
                search="onSearch"
                showRestoreButton="true"
                showClearButton="true"
            >
                <fb:filterGroupItems>
                    <fb:FilterGroupItem
                        id="_IDGenFilterGroupItem1"
                        groupName="__$INTERNAL$"
                        name="A"
                        label="Dato"
                        partOfCurrentVariant="true"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <DatePicker id="_IDGenDatePicker1" />
                        </fb:control>
                    </fb:FilterGroupItem>
                    <fb:FilterGroupItem
                        id="_IDGenFilterGroupItem2"
                        groupName="__$INTERNAL$"
                        name="B"
                        label="Status"
                        partOfCurrentVariant="true"
                        visibleInFilterBar="true"
                    >
                        <fb:control>
                            <Select id="_IDGenSelect1">
                                <items>
                                    <core:Item
                                        id="_IDGenItem1"
                                        text="Alle"
                                    />
                                    <core:Item
                                        id="_IDGenItem2"
                                        text="Ferdig"
                                    />
                                    <core:Item
                                        id="_IDGenItem3"
                                        text="Under Behandling"
                                    />
                                    <core:Item
                                        id="_IDGenItem4"
                                        text="Mottatt"
                                    />
                                </items>
                            </Select>
                        </fb:control>
                    </fb:FilterGroupItem>
                </fb:filterGroupItems>
            </fb:FilterBar>
            <Table
                id="_IDGenTable1"
                items="{ListModel>/}"
            >
                <columns>
                    <Column id="_IDGenColumn3">
                        <Text
                            id="_IDGenText3"
                            text="Status"
                        />
                    </Column>
                    <Column id="_IDGenColumn1">
                        <Text
                            id="_IDGenText1"
                            text="Sak"
                        />
                    </Column>
                    <Column id="_IDGenColumn2">
                        <Text
                            id="_IDGenText2"
                            text="Saksbehandler"
                        />
                    </Column>

                    <Column id="_IDGenColumn4">
                        <Text
                            id="_IDGenText4"
                            text="Kommentar"
                        />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem
                        id="_IDGenColumnListItem1"
                        type="Navigation"
                        press="onPressNavToFeed"
                        highlight="{path: 'ListModel>Status', formatter: '.formatter.status'}"
                    >
                        <cells>
                            <Text
                                id="_IDGenText7"
                                text="{ListModel>Status}"
                            />
                            <Text
                                id="_IDGenText5"
                                text="{ListModel>ID}"
                            />
                            <Text
                                id="_IDGenText6"
                                text="{ListModel>Name}"
                            />

                            <tnt:InfoLabel
                                id="il1"
                                text="Ny Melding"
                                visible="{= ${ListModel>Kommentar/0/Author} !== 'Lars'  &amp;&amp; ${ListModel>Kommentar}.length > 0 ? true :false }"
                                renderMode="Narrow"
                                colorScheme="1"
                                displayOnly="true"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
